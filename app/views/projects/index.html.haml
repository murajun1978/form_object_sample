%h1 Listing projects

%table
  %thead
    %tr
      %th= t('project.name')
      %th{colspan: 3}

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.name
        %td= link_to 'Show', project
        %td= link_to 'Edit', edit_project_path(project)
        %td= link_to 'Destroy', project_path(project), method: :delete, data: { confirm: 'Are you sure?' }
%br

= link_to 'New Project', new_project_path
